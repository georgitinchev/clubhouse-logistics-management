@page
@model MediaBazaarWebsite.Pages.Password_ResetModel
@{
}
<div class="login-container">
<div class="login-content">
    <div class="login-form">
        <h2>PasswordChange</h2>
        <p>Change your password. Mandatory if never changed before</p>
            <form method="POST">
                <div class="form-group">
                    <label asp-for="password">Password</label>
                    <input asp-for="password" type="password" id="password" name="password" required>
                </div>
                <div class="form-group">
                    <label asp-for="password2">Confirm Password</label>
                    <input asp-for="password2" type="password" id="password2" name="password2" required>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <button type="submit">ChangePassword</button>
                <a href="/Password_reset">Forgot password?</a>
            </form>
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["ErrorMessage"]
                </div>
            }
        </div>
    <div class="login-image">
        <img src="~/img/login_bg.png" alt="Login Image">
    </div>
</div>
</div>